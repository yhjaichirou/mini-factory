<view class="contain">
  <view class="content">
    <view class="title">基本信息</view>
    <view class="form">

      <van-cell-group>
        <van-field value="{{ username }}" label="姓名" placeholder="请输入用户名" />
        <van-field value="{{ username }}" label="曾用名" placeholder="如果没有填无" />
        <van-field value="{{ phone }}" label="手机号" placeholder="请输入手机号" error-message="手机号格式错误" border="{{ false }}" />

        <view class="v-radio">
          <view class="label">性别</view>
          <van-radio-group value="{{ radio }}" class="horizontal" bind:change="onChange" border="{{ true }}">
            <van-radio name="1">男</van-radio>
            <van-radio name="2">女</van-radio>
          </van-radio-group>
          <view style="margin-left:10rpx;display:flex;align-item:center;justify-content: center;">
            <input value="{{120}}"></input>
            <text>cm</text>
          </view>
        </view>

        <van-field value="{{ nation }}" label="民族"  placeholder="请选择所属民族" disabled required use-button-slot >
         <van-button class="noborder" slot="button" size="small" type="primary" bing:click="ChoiceNation">选择</van-button>
        </van-field>
        <van-field value="{{ birth }}" label="出生日期" placeholder="请选择出生日期" required/>
        <van-field value="{{ username }}" label="户籍地省市区" placeholder="请选择居住省市区" required/>
        <van-field value="{{ username }}" label="户口所在地" placeholder="请选择户口所在地" required/>
        <van-field value="{{ username }}" label="文化程度" placeholder="请选择文化程度" required/>
        <van-field value="{{ username }}" label="政治面貌" placeholder="请选择政治面貌" required use-button-slot required>
          <van-button class="noborder" slot="button" size="small" type="primary">选择</van-button>
        </van-field>
        <van-picker columns="{{ columns }}" />
        <van-field value="{{ username }}" label="血型" placeholder="请选择血型" required use-button-slot required>
          <van-button slot="button" size="small" type="primary">选择</van-button>
        </van-field>
        <van-field value="{{ username }}" label="婚姻状况" placeholder="请选择婚姻状况" required use-button-slot required>
          <van-button slot="button" size="small" type="primary">选择</van-button>
        </van-field>
        <van-field value="{{ username }}" label="宗教信仰" placeholder="请选择宗教信仰" required use-button-slot required>
          <van-button slot="button" size="small" type="primary">选择</van-button>
        </van-field>
        <van-field value="{{ username }}" label="兵役状况" placeholder="请选择兵役状况" required use-button-slot required>
          <van-button slot="button" size="small" type="primary">选择</van-button>
        </van-field>
        <van-field value="{{ username }}" label="兵役状况" placeholder="请选择兵役状况" required use-button-slot required>
          <van-button slot="button" size="small" type="primary">选择</van-button>
        </van-field>

        <van-field value="{{ username }}" label="紧急联系人" placeholder="请输入紧急联系人" required use-button-slot required>
          <van-button slot="button" size="small" type="primary">选择</van-button>
        </van-field>
        <van-field value="{{ phone }}" label="紧急联系电话" required placeholder="请输入紧急联系人电话" border="{{ true }}" required/>
        <van-field value="{{ sms }}" center clearable label="短信验证码" placeholder="请输入短信验证码" border="{{ true }}" use-button-slot required>
          <van-button slot="button" size="small" type="primary">发送验证码</van-button>
        </van-field>
      </van-cell-group>



    </view>

  </view>
  <view class="next">
    <van-button class="gotonext" type="primary" size="small" bindtap="gotonext" class="btn-pad">下一步</van-button>
  </view>

</view>