page{
  height: 100%;
}
.contain{
  height: 100%;
  display:flex;
  flex-direction:column;
}
.content{
  height: 80%;
  border: 4rpx #aaa solid;
  padding:10rpx 20rpx;
}
.content .title{
  border-bottom: 4rpx #aaa solid;
  text-align: center;
  font-size: 60rpx;
